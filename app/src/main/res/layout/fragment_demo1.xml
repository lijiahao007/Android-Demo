<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Demo1Fragment">

    <Button
        android:id="@+id/btn_to_fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to fragment 2" />

    <com.example.myapplication.statusinset.CustomSwitchCompat
        android:id="@+id/switch_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkbox_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_change_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换" />

    <Button
        android:id="@+id/btn_change_switch_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换1" />

</LinearLayout>