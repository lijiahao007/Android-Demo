<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IntentFlagActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_clear_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLAG_ACTIVITY_CLEAR_TOP"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_single_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLAG_ACTIVITY_SINGLE_TOP"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_clear_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLAG_ACTIVITY_CLEAR_TASK | FLAG_ACTIVITY_NEW_TASK"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>