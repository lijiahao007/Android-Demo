<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".statusinset.WindowInsetViewCompatDemoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_apply_window_inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ApplyWindowInset"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_show_hide_status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示/隐藏状态栏" />

        <Button
            android:id="@+id/btn_show_hide_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示/隐藏导航栏" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_hide_ime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="显示/隐藏软键盘 (old)" />

            <Button
                android:id="@+id/btn_show_hide_ime_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="显示/隐藏软键盘 (new)" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_soft_input_state_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="软键盘可见性(state)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_soft_input_adjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="软键盘导致的布局调整(adjust scroll)" />
        <Button
            android:id="@+id/btn_soft_input_adjust_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="软键盘导致的布局调整(adjust fix)" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>