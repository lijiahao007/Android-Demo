<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".statusinset.NavigationBarDemoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fit_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0. fitsSystemWindows"/>

            <Button
                android:id="@+id/btn_show_behind_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 内容显示在导航栏后方" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_change_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.1 导航栏改变颜色" />

                <Button
                    android:id="@+id/btn_transparent_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.2 导航栏变透明" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_set_nav_icon_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.1 改变导航栏图标颜色(SystemViewVisibility)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_set_nav_icon_color_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.2 改变导航栏图标颜色(WindowInsetsController Compat)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_set_nav_icon_color_window_inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.3 改变导航栏图标颜色(WindowInsetsController)" />

            <Button
                android:id="@+id/btn_get_nav_bar_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.1 获取导航栏高度"
                />

            <Button
                android:id="@+id/btn_get_nav_bar_height_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.1 获取导航栏高度（兼容）"
                />

            <Button
                android:id="@+id/btn_get_nav_bar_height_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.1 获取导航栏高度（预设）"
                />

            <Button
                android:id="@+id/btn_show_hide_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.1 显示与隐藏导航栏（SystemUiVisibility）"
                />

            <Button
                android:id="@+id/btn_show_hide_nav_bar_inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.2 显示与隐藏导航栏（WindowInset）"
                />

            <Button
                android:id="@+id/btn_show_hide_nav_bar_inset_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.3 显示与隐藏导航栏（WindowInset 兼容）"
                />

            <Button
                android:id="@+id/btn_immerse_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.1 普通沉浸式"/>

            <Button
                android:id="@+id/btn_stick_immerse_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.2 粘性沉浸式"/>

            <Button
                android:id="@+id/btn_get_screen_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.1 获取屏幕宽度"/>

            <Button
                android:id="@+id/btn_show_hide_status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. 显示/隐藏状态栏"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>