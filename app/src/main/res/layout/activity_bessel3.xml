<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customview.Bessel3Activity">

    <com.example.myapplication.customview.BesselCustomView2
        android:id="@+id/bessel_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_select_mode"
        android:layout_alignParentTop="true" />

    <RadioGroup
        android:id="@+id/rg_select_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/control_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="控制点1" />

        <RadioButton
            android:id="@+id/control_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="控制点2" />

    </RadioGroup>

</RelativeLayout>