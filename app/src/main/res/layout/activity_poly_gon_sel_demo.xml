<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".polygonseldemo.PolyGonSelDemoActivity">

    <com.example.myapplication.polygonseldemo.PolyGonSelectView
        android:id="@+id/poly_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_poly_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add poly"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/add_rectangle_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add rect"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/delete_curRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/change_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change->"
            android:textAllCaps="false" />


    </LinearLayout>
</LinearLayout>