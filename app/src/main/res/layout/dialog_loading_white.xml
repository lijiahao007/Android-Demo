<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_loading_bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="140dp"
        android:minHeight="120dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ProgressBar
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminateDrawable="@drawable/rotate_loading_dialog_new"
            android:indeterminateDuration="1800" />

        <TextView
            android:id="@+id/txt_loading_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="100dp"
            android:text="加载中"
            android:textColor="@color/color_invariant_000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="167dp"
        android:minHeight="93dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_horizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="9dp"
            android:indeterminateDrawable="@drawable/rotate_loading_dialog_new"
            android:indeterminateDuration="1800"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:text="加载中"
            android:textColor="@color/ColorGrayHeavier"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>